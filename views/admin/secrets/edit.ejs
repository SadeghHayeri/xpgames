    <title>شکار معما</title>

    <!-- favicon linke -->
    <link rel="icon" type="image/png" href="/firstpage/img/favicon.png" />
    <!-- ===============    Bootstrap core CSS     =============== -->
    <link rel="stylesheet" type="text/css" href="/bootstrap/bootstrap.min.css" media="all" />
</head>

    <div class="row">
        <h1 style="text-align: center">Edit <%= secret.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/admin/secrets/<%=secret._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Name" value="<%=secret.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="token" placeholder="Token" value="<%=secret.token%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="value" placeholder="Value" value="<%=secret.value%>" >
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="A" placeholder="A" value="<%=secret.A%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="C" placeholder="C" value="<%=secret.C%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="M" placeholder="M" value="<%=secret.M%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update!</button>
                </div>
            </form>
            <a href="/admin/secrets">Go Back</a>
        </div>
    </div>

